<Window x:Class="Todo_List.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Todo List" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Date controls -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Wybierz dzień" FontWeight="Bold" Margin="0,0,0,8"/>
            <DatePicker SelectedDate="{Binding SelectedDate}" />
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="◀" Command="{Binding PrevDayCommand}" Width="40"/>
                <Button Content="▶" Command="{Binding NextDayCommand}" Width="40" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Right: Tasks list and actions -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListView ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask, Mode=TwoWay}" Grid.Row="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Tytuł" Width="200" DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Opis" Width="400" DisplayMemberBinding="{Binding Description}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button Content="Dodaj" Command="{Binding AddCommand}" Width="90"/>
                <Button Content="Edytuj" Command="{Binding EditCommand}" Width="90" Margin="8,0,0,0"/>
                <Button Content="Usuń" Command="{Binding DeleteCommand}" Width="90" Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>